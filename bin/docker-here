#!/usr/bin/env bash
#shellcheck source-path=..
source "$HOME/strict.bash"
image=debian:bullseye-slim
if [[ $# -ne 0 ]];then
	image=$1
	shift
fi
src="$(realpath "$PWD")"
dest=/project
docker run --interactive --tty --rm \
	--entrypoint=sh \
	--mount="type=bind,source=$src,destination=$dest" \
	--workdir="$dest" "$image" "$@"
