#!/usr/bin/env bash
# shellcheck source=/Users/andre/strict.bash
source ~/strict.bash
image=debian:bullseye-slim
if [[ $# -ne 0 ]];then
	image=$1
	shift
fi
src=$(realpath "$(pwd)")
dest=/project
docker run --interactive --tty --rm \
	--mount="type=bind,source=$src,destination=$dest" \
	--workdir="$dest" "$image" "$@"
