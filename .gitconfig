[include]
	path = ~/secret/.gitconfig
[core]
	excludesfile = ~/.gitignore_global
	attributesFile = ~/.gitattributes
	pager = less -R
	editor = vim
	shell = /opt/homebrew/bin/fish
[help]
	format = man
[alias] #TODO move all shell commands to own files aa = add --all .
	au = add --update .
	br = branch
	branch-name = symbolic-ref --short HEAD
	ci = commit --verbose
	cia = commit --amend
	cl = clone --recurse-submodules
	co = checkout
	d = difftool
 	fa = fetch --all --atomic --verbose --progress --recurse-submodules
	fp = push --force --verbose --progress
	l = log --graph --abbrev-commit --date=local --date=iso-strict --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%ad%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''  %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
	la = l --all
	nuke = ! git reset . && git checkout . && git clean -fd .
	prune-merged = gone -d
	pu = up
	pullreq = ! hub pull-request -m `git branch-name` -b `git-default-branch`
	rb = rebase
	rbi = rebase --interactive --rebase-merges
	root = rev-parse --show-toplevel
	shallow = clone --depth 1 --recurse-submodules --shallow-submodules --no-tags
	sub = submodule
	sup = ! git stash && git up && git stash pop
[init]
	templatedir = ~/.git-templates
	defaultBranch = main
[submodule]
	fetchJobs = 0
[fetch]
	parallel = 0
	prune = true
	pruneTags = true
	recurseSubmodules = on-demand
[rebase]
	autostash = true
[pull]
	rebase = false
[commit]
	gpgsign = true
[tag]
	forceSignAnnotated = true
[push]
	default = current
	followTags = false

[diff]
	tool = vimdiff
[difftool]
	prompt = false
	tool = vimdiff
[difftool "vimdiff"]
	cmd = vim -d \"$LOCAL\" \"$REMOTE\"
[difftool "idea"]
	cmd = idea diff "$LOCAL" "$REMOTE"
	trustExitCode = true

[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	tool = vimdiff
	prompt = false
	conflictstyle = diff3
	keepBackup = false
[mergetool "vimdiff"]
	cmd = vim -d \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c '$wincmd w' -c 'wincmd J'
[mergetool "idea"]
	cmd = idea merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
	trustExitCode = true

[lfs]
	concurrenttransfers = 8
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[filesystem "AdoptOpenJDK|1.8.0_242|/dev/disk1s1"]
	timestampResolution = 1001 milliseconds
	minRacyThreshold = 0 nanoseconds

[gui]
	pruneDuringFetch = true

[pack]
	threads = 8
