#!/usr/bin/env bash
source ~/strict.bash
version=$(asdf latest python 2)
asdf install python $version
version=$(asdf latest python)
asdf install python $version
asdf global python $version
asdf reshim python
pip install --upgrade pip pipx
asdf reshim python
xargs -L 1 pipx install --force < "$HOME/requirements.txt"
asdf reshim python
