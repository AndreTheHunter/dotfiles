#!/usr/bin/env fish
if is-mac
	show softwareupdate --install --all --verbose
	show mas upgrade
end

show brew update
show brew upgrade
show brew unlink awscli
show brew link awscli@1
show brew unlink node node@14
show brew link --overwrite node@12

show omf update
show fisher update

show tfenv install latest
show tfenv use latest

show drip upgrade

show flutter upgrade

function npm-outdated
	npm outdated --global --parseable | ag --only-matching '(?<=/node_modules/).+?(?=:)'
end

if npm-outdated | ag --silent --literal 'npm' >/dev/null
	show npm install --global --force npm
end

for module in (npm-outdated)
	show npm install --global $module
end
show npm install --global local-web-server@4
show npm rebuild

#gem update --system
#gem update
#bundle update
show ngrok update

for pkg in (pip list --outdated --format freeze | ag --only-matching '.+(?===)')
	show pip install --upgrade $pkg 
end
show pip check

~/.vim/install.fish

curl https://raw.githubusercontent.com/axrs/cljog/master/cljog -o ~/bin/cljog
chmod u+x ~/bin/cljog
show cljog --update

show tldr --update

#pwsh -Command Update-Help

show gcloud components update --quiet

~/update-projects
show fish_update_completions
~/save
